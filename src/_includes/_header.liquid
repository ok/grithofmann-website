    <header>
      <nav class="navbar pb-5" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <a class="navbar-item" href="{{ site.domain }}">
            <p class="is-2 is-size-3-touch title has-text-weight-bold is-uppercase">Grit Hofmann</p>
          </a>
      
          <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navMenu">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>
      
        <div class="navbar-menu" id="navMenu">
          <div class="navbar-end has-text-centered">
          {%- for item in navigation.nav_items %}
            {%- if item.header %}
              {% assign item_slug = item.title | downcase %}
              <a href="/{{ item.url }}" class="navbar-item is-size-6 is-uppercase{% if page.fileSlug == item_slug %} active{% endif %}">{{ item.title }}</a>
            {%- endif %}
          {%- endfor %}
          {%- if site.environment == "development" %}
            <a href="/debug" class="navbar-item is-size-6 is-uppercase">Debug</a>
          {%- endif %}
          </div>
        </div>
      </nav>
    </header>